<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">

    <persistence-unit name="jpaUnit">
        <provider>org.hibernate.ejb.HibernatePersistence</provider>

		<class>fr.erdprt.samples.persistance.model.products.RefCategory</class>
        <class>fr.erdprt.samples.persistance.model.products.RefProductStatus</class>
        <class>fr.erdprt.samples.persistance.model.products.RefProduct</class>
        <class>fr.erdprt.samples.persistance.model.products.RefInventory</class>
        <class>fr.erdprt.samples.persistance.model.products.Person</class>
        <class>fr.erdprt.samples.persistance.model.products.Address</class>
        <class>fr.erdprt.samples.persistance.model.products.Product</class>
        <class>fr.erdprt.samples.persistance.model.products.Order</class>
        <class>fr.erdprt.samples.persistance.model.products.MetaData</class>
        <exclude-unlisted-classes />

        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.PostgreSQLDialect" />
        </properties>

    </persistence-unit>
</persistence>